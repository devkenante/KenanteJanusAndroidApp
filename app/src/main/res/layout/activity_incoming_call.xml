<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MMLayout"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/back_screen"
    tools:context=".activities.IncomingCallActivity">

    <LinearLayout
        style="@style/MMLayout"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.25"
            android:gravity="center">

            <ImageView
                style="@style/WWLayout"
                android:padding="10dp"
                android:src="@drawable/logo" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="20dip">

    <TextView
        style="@style/WWLayout"
        android:text="Incoming Call"
        android:gravity="center"
        android:textSize="23sp"
        android:fontFamily="serif"
        android:textColor="@color/offWhite"
        android:layout_marginBottom="20dip"/>

        <TextView
            style="@style/WWLayout"
            android:text="From"
            android:gravity="center"
            android:fontFamily="serif"
            android:textSize="23sp"
            android:textColor="@color/offWhite"
            android:layout_marginBottom="20dip"/>

    <TextView
        style="@style/WWLayout"
        android:gravity="center"
        android:textSize="35sp"
        android:fontFamily="serif"
        android:text="@string/app_name"
        android:textColor="@color/white"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.25"
        android:gravity="center"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@mipmap/ic_endcall"
            android:layout_marginRight="100dip"
            android:id="@+id/endCall"/>

        <ImageView
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@mipmap/ic_start_call"
            android:id="@+id/startCall" />

    </LinearLayout>

    </LinearLayout>

</FrameLayout>