    <FrameLayout style="@style/MMLayout">

        <VideoView
            style="@style/MMLayout"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/videoView" />

        <ImageView
            style="@style/MMLayout"
            android:visibility="gone"
            android:id="@+id/firebaseIV"/>

        <LinearLayout
            style="@style/MWLayout"
            android:layout_gravity="bottom"
            android:paddingBottom="10dip"
            android:gravity="center">

            <ImageView
                android:id="@+id/videoPlay"
                style="@style/WWLayout"
                android:visibility="gone"
                android:layout_marginRight="10dip"
                android:layout_marginEnd="10dip"
                android:src="@drawable/ic_play" />

            <ImageView
                android:id="@+id/videoPause"
                style="@style/WWLayout"
                android:visibility="gone"
                android:src="@drawable/ic_pause" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/pptImageChangeLL"
                style="@style/WWLayout">

                <ImageView
                    android:id="@+id/pptLeftIV"
                    style="@style/WWLayout"
                    android:src="@drawable/ic_ppt_left" />

                <ImageView
                    android:id="@+id/pptRightIV"
                    style="@style/WWLayout"
                    android:layout_marginLeft="50dip"
                    android:src="@drawable/ic_ppt_right" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/closeFirebaseFragment"
            style="@style/WWLayout"
            android:visibility="gone"
            android:layout_gravity="end"
            android:padding="10dip"
            android:src="@drawable/ic_close" />

    </FrameLayout>

    <ProgressBar
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:id="@+id/videoLoadingPG"/>

    <ImageView
        android:id="@+id/rotateFirebaseMediaIV"
        style="@style/WWLayout"
        android:src="@drawable/ic_rotate"
        android:layout_marginLeft="10dip"
